{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "path": {
      "type": "string"
    },
    "script": {
      "type": "string"
    },
    "script-lang": {
      "type": "string",
      "default": "rego"
    },
    "description": {
      "type": "string"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "initiatives": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "format": {
              "type": "string"
            }
          },
          "required": [
            "format"
          ]
        },
        {
          "properties": {
            "format-type": {
              "type": "string"
            }
          },
          "required": [
            "format-type"
          ]
        }
      ],
      "properties": {
        "signed": {
          "type": "boolean",
          "default": false
        },
        "filter-by": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "product",
              "pipeline",
              "target",
              "none"
            ]
          }
        },
        "target_type": {
          "type": "string"
        }
      },
      "required": [
        "filter-by"
      ]
    },
    "with": {
      "type": "object"
    }
  },
  "required": [
    "name"
  ],
  "anyOf": [
    {
      "required": [
        "path"
      ]
    },
    {
      "required": [
        "script"
      ]
    }
  ]
}